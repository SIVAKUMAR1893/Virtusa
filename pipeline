pipeline{
    agent any
    stages{
      stage("create clone"){
            steps{
                git credentialsId: 'GIT', url: 'https://github.com/SIVAKUMAR1893/Virtusa.git'
            }
        }
        stage('create'){
            steps{
               sh "mkdir /opt/jenkins"
               sh "cd /opt/jenkins/"
               sh "touch jenkinsfile.txt"
               sh "echo 'jenkins file created' >> jenkinsfile.txt"
               sh "cat jenkinsfile.txt"
            }
        }
        
      }
   }
